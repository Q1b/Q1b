---
import { getEntry, type CollectionEntry } from "astro:content";
import Wrapper from "./Wrapper.astro";
import Logo from "@/components/Logo.astro";
import ThemeButton from "@/lib/theme/Button.astro";
import HomeIcon from "@/components/icons/Home.astro";

export type Props = {
	title?: string;
	description?: string;
	image?: { src: string; alt: string };
	pageType?: "article" | "website";
	class?: string;
};

const site = (
	(await getEntry(
		"site-settings",
		"default",
	)) as CollectionEntry<"site-settings">
).data;

// const profile = (
//   (await getEntry("profile", "data")) as CollectionEntry<"profile">
// ).data;

const {
	title = site.title,
	description = site.description,
	image = site.image,
	pageType = "website",
	class: className,
} = Astro.props;

const canonicalURL = new URL(Astro.request.url, Astro.site);
const currentPage = Astro.url.pathname;

const rotatings = [
	"Yoga Instructor",
	"Software Developer",
	"Basketball Player",
	"Content Creator",
];
